generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id                 String   @id @unique
  name               String
  email              String   @unique
  password           String
  isEmailVerified    Boolean
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("user")
}
