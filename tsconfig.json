{
   "compilerOptions": {
      "baseUrl": "./",
      "paths": {
         "@domain/*": [
            "src/domain/*"
         ],
         "@usecases/*": [
            "src/usecases/*"
         ],
         "@infra/*": [
            "src/infra/*"
         ],
         "@shared/*": [
            "src/shared/*"
         ],
      },
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
   }
}